<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="my-3">Ajouter votre animal !</h1>
      <%= simple_form_for(@animal) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.input :age, input_html: { min: '0', step: 'any' } %>
        <%= f.input :sex, collection: ["Male", "Femelle"], default: 'Male' %>
        <%= f.input :description %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
