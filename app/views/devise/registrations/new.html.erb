<div class="container">
  <div class="form-container pt-4">
    <div class="row form-card">
      <div class="col-4 form-img", style="background-image: url(<%= asset_path 'spitz.png' %>);">
        <div class="mt-5 d-flex flex-column align-items-center">
          <%= image_tag "logo.png", style: "height: 40px; width: 40px"%>
          <h6 class="text-center text-white">Entre deux<br>
           bonnes pates</h6>
        </div>
      </div>

      <div class="col-8 form-infos">
        <h2 class="text-center mt-4 text-bold">Hello ! Parlez-nous de vous</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-addon"><i class="far fa-envelope"></i></span>
              </div>
              <%= f.input :email, label: false, autofocus: true,
                          placeholder: 'email',
                          input_html: { autocomplete: "email" }, class: "form-control"%>
            </div>

            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-addon" id="icon-passord"><i class="fa fa-key"></i></span>
              </div>
              <%= f.input :password, label: false, required: true,
                          placeholder: 'mot de passe',
                          hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" }, class: "form-control" %>
            </div>

            <div class="input-group mb-4">
              <div class="input-group-prepend">
                <span class="input-group-addon"><i class="fa fa-key"></i></span>
              </div>
              <%= f.input :password_confirmation, label: false,
                        placeholder: 'confirmer mot de passe',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "S'inscrire", class: "btn btn-block button-basic text-white" %>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
