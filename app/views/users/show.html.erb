<div class="container">
  <div class="row m-5 ">

    <div class="col-4 user-profile">

        <%= image_tag "profile.jpg", class: "photo-user-profile"%>
        <h2 class="my-2 p-2 text-center"><%= @user.first_name %></h2>
        <h6 class="my-1 p-1 text-center"><%= @old %> ans</h6>
        <div class="d-flex justify-content-around mb-3 mt-3">
          <%= image_tag "children.png", class: "icon-user-profile"%>
          <%= image_tag "building.png", class: "icon-user-profile"%>
          <%= image_tag "certificat.png", class: "icon-user-profile"%>
        </div>
        <div class="text-center button-basic">
          <%= link_to "Me Contacter" %>
        </div>

    </div>

    <div class="col-8">
      <div class="user-informations">
        <div class="user-description">
          Descriptions / motivations
        </div>

        <div class="user-services">
          Services / tarifs
        </div>
      </div>
    </div>
  </div>
</div>
